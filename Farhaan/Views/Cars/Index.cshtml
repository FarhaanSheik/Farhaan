@model IEnumerable<Farhaan.Models.Car>

@{
    ViewData["Title"] = "Cars Index";
    var currentSort = ViewData["CurrentSortOrder"] as string;
    var currentFilter = ViewData["CurrentFilter"] as string;
}

<h1>Cars</h1>

<form asp-controller="Cars" asp-action="Index" method="get">
    <p>
        Search: <input type="text" name="searchString" value="@currentFilter" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["BrandSortParm"]">Brand</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["YearSortParm"]">Year</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]">Price per Day</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Brand</td>
                <td>@item.Year</td>
                <td>@item.PricePerDay</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CarID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.CarID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CarID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create">Create New</a>
</p>