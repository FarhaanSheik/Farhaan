@{
    ViewData["Title"] = "Home Page";
}

<style>
    .full-screen-bg {
        position: relative;
        width: 100%;
        height: 100vh; /* Full viewport height */
        background-image: url('https://rare-gallery.com/uploads/posts/5386933-road-sky-flat-asphalt-highway-freeway-horizon-countryside-cloud-mountain-way-meadow-grass-open-road-yellow-line-double-line-mountain-ridge-mountain-line-mountain-range-filed-public-domain-imag.jpg');
        background-size: cover; /* Cover the entire area */
        background-position: center; /* Center the image */
    }

    .content {
        position: absolute;
        top: 25%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: black; /* Change text color for contrast */
    }
</style>

<div class="full-screen-bg">
    <div class="content">
        <h1 class="display-17">Kia Ora</h1>
        <h2 class="display-4">Welcome To The Best Car Rental In New Zealand</h2>
        <p>Get Your Booking Done Now!</p>
    </div>
</div>